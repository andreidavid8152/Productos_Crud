@model Producto
@{
    ViewData["Title"] = "Visualizar Producto";
}

<div class="text-center">
    <h1 class="display-4">VISUALIZAR PRODUCTOS</h1>

    <form class="col-sm-4 mx-auto my-auto" method="post">

        <div class="form-group mb-5 mt-4">
            <label for="exampleInputEmail1">Nombre</label>
            <input asp-for="Nombre" class="form-control mt-2 placeholder-black" placeholder="Ingrese un nombre">
        </div>

        <div class="form-group mb-5">
            <label for="exampleInputEmail1">Descripcion</label>
            <input asp-for="Descripcion" class="form-control mt-2 placeholder-black" placeholder="Ingrese una descripcion">
        </div>

        <div class="form-group mb-5">
            <label for="exampleInputEmail1">Cantidad</label>
            <input asp-for="Cantidad" class="form-control mt-2 placeholder-black" placeholder="Ingrese una cantidad">
        </div>

        <div class="form-group mb-5">
            <a asp-action="index" class="btn btn-warning">Volver</a>
        </div>

    </form>

</div>
